<%= form_for(@party) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :event_name, "Name" %>
    <%= f.text_field :event_name %>
  </p>

  <p>
    <%= f.label :event_description, "Description" %>
    <%= f.text_field :event_description %>
  </p>

  <p>
    <%= f.label :event_date, "Date" %>
    <%= f.datetime_select :event_date, :prompt => {:day => 'Choose day', :month => 'Choose month', :year => 'Choose year'}, :order => [:day, :month, :year] %>
  </p>

  <p>
    <%= f.label :venue %>
    <%= f.text_field :venue %>
  </p>

  <p>
    <%= f.label :venue_name, "Venue" %>
    <%= f.text_field :venue_name %>
  </p>

  <p>
    <%= f.label :venue_street, "Street" %>
    <%= f.text_field :venue_street %>
  </p>

  <p>
    <%= f.label :venue_city, "City" %>
    <%= f.text_field :venue_city %>
  </p>

  <p>
    <%= f.label :venue_province, "State/Province" %>
    <%= f.text_field :venue_province %>
  </p>

  <p>
    <%= f.label :venue_zipcode, "Zipcode/Postal Code" %>
    <%= f.text_field :venue_zipcode %>
  </p>

  <p>
    <%= f.label :host %>
    <%= f.text_field :host %>
  </p>

  <p>
    <%= f.label :hashtag %>
    <%= f.text_field :hashtag %>
  </p>

  <p>
    <%= f.label :notes %>
    <%= f.text_area :notes, :size => 5 %>
  </p>

  <p>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </p>

    <%= f.submit "Create Party", :class => "btn btn-success btn-lg" %>

<% end %>



