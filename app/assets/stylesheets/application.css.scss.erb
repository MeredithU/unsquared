/* Colour Scheme Two */
/* Orange: #ff7759; */
/* Pink: #c74965; */
/* Purple: #7a387f; */
/* Light Green: #5eeb70; */
/* Dark Green: #07b58d; */

.element.light-orange     { background: #ff7759; }
.element.medium-orange    { background: #c74965; }
.element.dark-orange      { background: #7a387f; }
.element.blue             { background: #5eeb70; }
.element.grey             { background: #07b58d; }

.element * {
  position: absolute;
  margin: 0;
}

.element .symbol {
  left: 0.2em;
  top: 0.4em;
  font-size: 3.8em;
  line-height: 1.0em;
  color: #FFF;
}
.element.large .symbol {
  font-size: 4.5em;
}

.element.fake .symbol {
  color: #000;
}

.element .name {
  left: 0.5em;
  bottom: 1.6em;
  font-size: 1.05em;
}

.element .weight {
  font-size: 0.9em;
  left: 0.5em;
  bottom: 0.5em;
}

.element .number {
  font-size: 1.25em;
  font-weight: bold;
  color: hsla(0,0%,0%,.5);
  right: 0.5em;
  top: 0.5em;
}

.variable-sizes .element.width2 { width: 200px; }

.variable-sizes .element.height2 { height: 200px; }

.variable-sizes .element.width2.height2 {
  font-size: 2.0em;
}

.element.large,
.variable-sizes .element.large,
.variable-sizes .element.large.width2.height2 {
  font-size: 3.0em;
  width: 250px;
  height: 250px;
  z-index: 100;
}

